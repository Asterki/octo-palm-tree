datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String           @id @default(cuid())
  created_at     DateTime         @default(now())
  email          String           @unique
  password       String
  boards         Boards[]
  PendingActions PendingActions[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Boards {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  name       String

  sensorData       String
  sensorShareToken String

  user_id        String?
  pendingActions PendingActions[]
  user           User?            @relation(fields: [user_id], references: [id])
}

model PendingActions {
  id String @id @default(cuid())

  timeToRun DateTime

  actionType  String
  actionData String

  user_id String
  user    User   @relation(fields: [user_id], references: [id])

  Board    Boards? @relation(fields: [boardId], references: [id])
  boardId String?
}
