datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String          @id @default(cuid())
  created_at     DateTime        @default(now())
  email          String          @unique
  password       String
  PendingActions PendingActions?
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model PendingActions {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  expires_at DateTime
  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
  action     String
  data       String

  @@unique([user_id])
}
